@page
@model ClientAppMovieReview.Pages.Movies.CommentModel
@{
    ViewData["Title"] = "Comment";
}


<div class="row">
    <div class="col-md-8">
        <img src="~/images/logo-red.jpg" alt="MovieMania" />
    </div>
    <div class="col-md-4">
        <h4>Update Comment</h4>
        <form method="post" asp-page-handler="comment">
            <input type="hidden" asp-for="movieComment.MovieCommentId" value="@(Model.movieComment.MovieCommentId)" />
            <input type="hidden" asp-for="movieComment.MovieId" value="@(Model.movieComment.MovieId)" />
            <input type="hidden" asp-for="movieComment.MovieTitle" value="@(Model.movieComment.MovieTitle)" />
            <input type="hidden" asp-for="movieComment.UserName" value="@(Model.movieComment.UserName)" />
            <div class="form-group">
                <label asp-for="movieComment.Comment" class="control-label"></label>
                <textarea asp-for="movieComment.Comment" class="form-control">@(Model.movieComment.Comment)</textarea>
                <span asp-validation-for="movieComment.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

