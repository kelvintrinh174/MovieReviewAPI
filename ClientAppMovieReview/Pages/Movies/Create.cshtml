@page
@model ClientAppMovieReview.Pages.Movies.CreateModel
@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-8">
        <img src="~/images/logo-red.jpg" alt="MovieMania" />
    </div>
    <div class="col-md-4">
        <h4>Add Movie</h4>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="movie.MovieTitle" class="control-label"></label>
                <input asp-for="movie.MovieTitle" class="form-control" />
                <span asp-validation-for="movie.MovieTitle" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="movie.imageFile" class="control-label"></label>
                <input asp-for="movie.imageFile" type="file" class="form-control" />
                <span asp-validation-for="movie.imageFile" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="movie.MovieImage" class="control-label"></label>
                <input asp-for="movie.MovieImage" class="form-control" />
                <span asp-validation-for="movie.MovieImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Actor" class="control-label"></label>
                <input asp-for="movie.Actor" class="form-control" />
                <span asp-validation-for="movie.Actor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Genre" class="control-label"></label>
                <input asp-for="movie.Genre" class="form-control" />
                <span asp-validation-for="movie.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.MovieVideo" class="control-label"></label>
                <input asp-for="movie.MovieVideo" class="form-control" />
                <span asp-validation-for="movie.MovieVideo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.DateReleased" class="control-label"></label>
                <input asp-for="movie.DateReleased" class="form-control" />
                <span asp-validation-for="movie.DateReleased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>